@model Mailform.UserEdit
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
    <title>メールフォームテスト - 管理者ログイン</title>
</head>
<body>
    <div>
        @using(Html.BeginForm()){
            @Html.TextBoxFor(
                model => model.AdminPassword,
                new { size = 30 }
            )
            <input type="submit" value="送信" />

            if(ViewBag.Exception is System.Exception && !String.IsNullOrEmpty(ViewBag.Exception.Message))
            {
                <div>@ViewBag.Exception.Message</div>
            }
        }
    </div>
</body>
</html>
